/* Example Rofi color template for Variety ThemeEngine
 * Place at: ~/.config/wallust/templates/rofi.rasi
 *
 * Import this in your main rofi config.rasi:
 *   @import "colors.rasi"
 */

* {
    background:     {{background}};
    background-alt: {{background | lighten(0.1)}};
    foreground:     {{foreground}};
    selected:       {{color4}};
    active:         {{color2}};
    urgent:         {{color1}};

    /* Derived */
    border-color:   {{color4}};
    separator-color: {{color8}};
    scrollbar-handle: {{color4 | desaturate(0.2)}};
}
